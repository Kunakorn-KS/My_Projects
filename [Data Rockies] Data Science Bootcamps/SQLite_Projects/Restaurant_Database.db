/*In this project, I will create a simple restaurant's database */

create table Orders(
    OrderID int,
    OrderDate date,
    FoodID int,
    BeverageID int,
    StaffID int,
    PromotionCode int,
    Sales real,
    primary key (OrderID),
    foreign key (FoodID) references Food(FoodID),
    foreign key (BeverageID) references Beverage(BeverageID),
    foreign key (StaffID) references Staff(StaffID),
    foreign key (PromotionCode) references Promotion(PromotionCode)
);

